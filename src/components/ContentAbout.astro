---
import { Code } from "astro:components";

const code = `interface Developer {
    name: string;
    skills: string[];
    interests: string[];
};

interface TechStack {
    devOps: string[];
    backend: string[];
   frontend: string[];
};

type ContactType = 'github' | 'twitter' | 'linkedIn' | 'email';

const techStack: TechStack = {
    devOps: [
        'GitHub',
        'Cloudflare',
        'Docker',
        'Linux',
        'Nixos',
        'Caddy',
        'Directus'
    ],
    frontend: [
        'Angular',
        'Vue',
        'React',
        'JavaScript',
        'TypeScript',
        'TailwindCSS',
        'Astro',
    ],
    backend: [
        'PostgreSQL',
        'S3 Storage',
        'Go'
    ]
};

// Developer profile
const me: Developer = {
    name: 'Nguyen Tien Hoach',
    skills: [
        ...techStack.devOps,
        ...techStack.backend,
        ...techStack.frontend
    ],
    interests: [
        'Open Source',
        'Performance',
        'Self-Hosting',
        'Networking',
        'Philosophy',
        'Design',
    ]
};
`;
---

<Code code={code} lang="js" wrap={true} />

<style is:global>
	@reference "../styles/global.css";

	/* Custom styling for code block line numbers */
	pre.astro-code {
		@apply bg-transparent;
		background-color: transparent !important;
	}

	pre.astro-code code {
		@apply block;
		counter-reset: step;
		counter-increment: step 0;
	}

	pre.astro-code code .line {
		@apply relative;
	}

	pre.astro-code code .line::before {
		content: counter(step);
		counter-increment: step;
		@apply text-gray-600 pr-2;
	}
</style>
